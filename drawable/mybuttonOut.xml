<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#a80d02" />
            <gradient android:angle="-90" android:startColor="#a80d02" android:endColor="#a80d02"  />            
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#14a76c" />
            <solid android:color="#14a76c"/>       
        </shape>
    </item>  
    <item >
       <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#eb4034" />
            <gradient android:angle="-90" android:startColor="#eb4034" android:endColor="#eb4034" />            
       </shape>
    </item>
</selector>